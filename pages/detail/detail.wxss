  font-size:26rpx;
  justify-content:space-between;
}
.two{
  display:flex;
}
.zi{
  flex:1;
  margin-left:10rpx;
}
.danxuan{
  width:32rpx;
  height:32rpx;
  margin:0;
}
.danxuan image{
  width:100%;
  height:100%;
  display:block;
}

/* 内容 */
.center{
  width:100%;
}
.top{
  line-height:60rpx;
  font-size:28rpx;
  color:#076c2b;
  justify-content:center;
  display:flex;
}
.biao{
  margin:0 12rpx;
}
.xian{
  width:56rpx;
  height:2rpx;
  background:#076c2b;
  margin-top:30rpx;
}
/* 文本 */
.wenben{
  background:#fff;
  padding:0 20rpx;
  padding-bottom:20rpx;
}
.tiaoti{
  display:flex;
  font-size:30rpx;
  color:#222222;
  padding:12rpx 0; 
  line-height:50rpx;
}
.tu{
  width:50rpx;
  height:50rpx;
}
.tu image{
  width:100%;
  height:100%;
}
.wenzi{
  font-size:24rpx;
  color:#444444;
  line-height:40rpx;
  padding:0 20rpx;
  letter-spacing:2px;
}
