.tupian{
  width:100%;
  height:410rpx;
  box-sizing:border-box;
  padding:0 20rpx;
  background:#fff;
  margin-top:20rpx;
}
.tupian image{
  width:100%;
  height:100%;
}
/* 按钮预约 */
.btn{
  width:100%;
  line-height:98rpx;
  text-align:center;
  background:#16b831;
  color:#fff;
  font-size:30rpx;
}
.ping_btn{
  display:flex;
  justify-content:center;
  margin-top:60rpx;
}
.ping_btn image{
  width:165rpx;
  height:50rpx;
  
}
/* 评论条 */
.lun{
  margin-top:10rpx;
  box-sizing:border-box;
  
  background:#fff;
  width:100%;
  padding-bottom:80rpx;
}
.list1{
  display:flex;
  padding:20rpx 20rpx 0 20rpx;
}
.lsi{
  border-bottom:1rpx solid #dadada;
}
.touxiang{
  width:88rpx;
  height:88rpx;
}
.touxiang image{
  width:100%;
  height:100%;
}
.right1{
  flex:1;
  padding-left:10rpx;
}
.name{
  font-size:24rpx;
  color:#1fb8ff;
  line-height:50rpx;
}
.xinxi{
  color:#444444;
  font-size:24rpx;
}
.time{
  text-align:right;
  font-size:22rpx;
