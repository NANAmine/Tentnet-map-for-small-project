  width:100%;
  height:100%;
}
/* 列表 */
.list{
  width:100%;
  background:#fff;
  position: relative;
}
.one{
  display:flex;
  box-sizing:border-box;
  padding:18rpx 20rpx;
  height:88rpx;
}
.img{
  width:50rpx;
  height:50rpx;
}
.img image{
  width:50rpx;
  height:50rpx;
}
.right{
  flex:1;
  display:flex;
  font-size:28rpx;
  justify-content:space-between;
  line-height:44rpx;
  box-sizing:border-box;
  overflow:hidden;

}
.right span{
  margin-right:5px;
}
.right view text{
  color:#ff0000;
}
.one1{
  border:none;
}
.zixun{
  background:#30dd4f;
